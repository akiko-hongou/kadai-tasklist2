<% if logged_in? %>

<p>ログイン完了ユーザ: 
<%= current_user.name %>
</p>

<ul class="media-list">


<h1>タスク一覧</h1>

<% @tasks.each do |task| %>

 <li class="media">
   <div class="media-body">
      <div>
      <%= link_to task.user.name, user_path(task.user) %>
       
        <div>
          <%= link_to task.id, task %>
          <%= task.content %>
          &gt; 
          <%= task.status %>
         </div>  
     </div>
     </div>
 </li>
    
 
<% end %>

</ul>

<% else %> 
]
    <li><%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %></li>
    <li><%= link_to 'Login', login_path %></li>
<% end %>



